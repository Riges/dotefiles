{
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "files.autoSave": "off",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/dist": true,
        "**/out": true,
        "tslint-rules/**/*.js": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/out": true
    },
    "workbench.colorTheme": "One Monokai",
    "workbench.iconTheme": "vscode-icons"
}